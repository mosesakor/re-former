<% if false %>
<form action="/users" method="post" accept-charset="UTF-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="username">Username:</label>
  <input type="text" id="username" name="user[username]"><br><br>
  <label for="email">Email:</label>
  <input type="text" id="email" name="user[email]"><br><br>
  <label for="password">Password:</label>
  <input type="text
" id="password" name="user[password]"><br><br>
  <input type="submit" value="Submit">
</form>
<% end %>

<% if false %>
<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:username, "Username:") %>
  <%= text_field_tag(:username,) %>
  <%= label_tag(:email, "#E-Mail:") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %>
  <%= submit_tag("Submit") %>
<% end %>
<% end %>

<%= form_for @user do |f| %>
Username: <%= f.text_field :username%><br />
Email: <%= f.text_field :email%><br />
Password: <%= f.text_field :password%><br />
<%= f.submit %>
<% end %>
